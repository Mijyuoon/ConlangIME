<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="25"
             x:Class="ConlangIME.Views.Components.NumSpinner">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" MinWidth="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Margin="0,0,2,0" Padding="5" Content="−"
                Click="ButtonMinus_OnClick"/>

        <TextBox Grid.Column="1" x:Name="TextValue" IsReadOnly="True"
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        <Button Grid.Column="2" Margin="2,0,0,0" Padding="5" Content="+"
                Click="ButtonPlus_OnClick"/>
    </Grid>

</UserControl>
